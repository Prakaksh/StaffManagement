@model HCS.StaffManagement.Models.Login
@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@


    <link rel="stylesheet" type="text/css" href="~/Content/material-dashboard.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="~/Content/material-icons.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.css" />

    <!--   Core JS Files   -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/material-plugins/material.min.js"></script>
    <script src="~/Scripts/material-plugins/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Scripts/material-plugins/material-dashboard.js"></script>
    <!-- Material Dashboard DEMO methods, don't include it in your project! -->
    <script src="~/Scripts/material-plugins/demo.js"></script>

    <!-- TagsInput Plugin -->
    @*<script src="~/Scripts/material-plugins/jquery.tagsinput.js"></script>*@
    <style>
        body {
            background-color: rgb(60, 72, 88);
            background-image: url('../../Images/securityguard.jpg');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<body>
    @*<form name="frmLogin" action="">*@
        <div class="content">
            <div class="container-fluid">
@using (Ajax.BeginForm(
                                        new AjaxOptions
                                        {
                                            HttpMethod = "post",
                                            Url = "/Api/WebApi/LoginApi",
                                            InsertionMode = InsertionMode.Replace,
                                            OnSuccess = "onAjaxRequestSuccess"

                                        }))
{
                @*<div class="row">
                    <div class="col-md-12">
                        <h2 style="text-align:center; color:white">SAP SECURITY SERVICES</h2>
                    </div>
                </div>*@
                @*<br /><br />*@
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header card-header-icon" data-background-color="blue">
                                <i class="material-icons">lock</i>
                                <span><b>Login Form </b></span>
                            </div>
                            <div class="card-content">
                                @*<h4 class="card-title">Login Form</h4>*@
                                <form class="form-horizontal">
                                    <div class="row">
                                        <label class="col-md-3 label-on-left">Email</label>
                                        <div class="col-md-9">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label"></label>
                                                @Html.TextBoxFor(Model => Model.EmailID, new { @class = "form-control"})
                                                @*<input type="email" id="txtEmail" class="form-control">*@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-md-3 label-on-left">Password</label>
                                        <div class="col-md-9">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label"></label>
                                                <input type="password" id="txtPassword" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-md-3"></label>
                                        <div class="col-md-9">
                                            <div style="color:red;" id="divError"></div>
                                        </div>
                                    </div>
                                    @*<div class="row">
                                            <label class="col-md-3"></label>
                                            <div class="col-md-9">
                                                <div class="checkbox form-horizontal-checkbox">
                                                    <label>
                                                        <input type="checkbox" name="optionsCheckboxes"> Remember Me
                                                    </label>
                                                </div>
                                            </div>
                                        </div>*@
                                    <div class="row">
                                        <label class="col-md-3"></label>
                                        <div class="col-md-9">
                                            <div class="form-group form-button">
                                                <button type="submit" id="btnLogin" class="btn btn-fill btn-rose">Sign in</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
}
            </div>
        </div>
    <footer class="footer">
            <div class="container">
                <p class="copyright pull-right">
                    ©
                    <script>
                        document.write(new Date().getFullYear())
                    </script>
                    <a href="http://www.hcsinfosolutions.com">HCS Info Solutions</a>
                </p>
            </div>
        </footer>


    @*</form>*@
</body>
</html>
<script src="~/Scripts/Login/Login.js"></script>
